<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskNotesApp.ViewModels"
             x:Class="TaskNotesApp.Views.TaskListPage"
             BackgroundColor="#F4F6FA">

    <ContentPage.BindingContext>
        <vm:TaskListViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="16"
          RowDefinitions="Auto,Auto,*,Auto">

        <!-- HEADER -->
        <Label Grid.Row="0"
               Text="ðŸ“ Task Notes"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#1F2937"
               Margin="0,0,0,10" />

        <!-- ACTION BAR -->
       
        <Grid Grid.Row="1"
               
      ColumnDefinitions="Auto,Auto"
      Margin="0,0,0,10">

      

            <!-- RIGHT BUTTON GROUP -->
            <Grid Grid.Column="1"
          ColumnDefinitions="Auto,Auto"
          ColumnSpacing="10">

                <Button Text="Select All"
                FontAttributes="Bold"
                BackgroundColor="DarkBlue"
                TextColor="White"
                WidthRequest="90"
                HeightRequest="36"
                CornerRadius="10"
                Command="{Binding SelectAllCommand}" />

                <Button Grid.Column="1"
                Text="Delete All"
                FontAttributes="Bold"
                BackgroundColor="Maroon"
                TextColor="White"
                WidthRequest="90"
                HeightRequest="36"
                CornerRadius="10"
                Command="{Binding DeleteAllCommand}" />
            </Grid>
        </Grid>


        <!-- TASK LIST -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Tasks}"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="6"
                          ColumnDefinitions="40,*,Auto,Auto"
                          ColumnSpacing="10"
                          VerticalOptions="Center">

                        <!-- CHECKBOX -->
                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsCompleted}"
                                  Color="Green"
                                  Scale="1.25"
                                  VerticalOptions="Center"
                                  HorizontalOptions="Center" />

                        <!-- READ MODE -->
                        <Label Grid.Column="1"
                               Text="{Binding Title}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center"
                               InputTransparent="True"
                               IsEnabled="False"
                               IsVisible="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}" />

                        <!-- EDIT MODE -->
                        <Entry Grid.Column="1"
                               Text="{Binding Title, Mode=TwoWay}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               IsVisible="{Binding IsEditing}"
                               PropertyChanged="Entry_PropertyChanged"
                               ClearButtonVisibility="WhileEditing" />

                        <!-- UPDATE -->
                        <Button Grid.Column="2"
                                Text="Update"
                                FontAttributes="Bold"
                                BackgroundColor="Green"
                                TextColor="White"
                                WidthRequest="90"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                  Path=BindingContext.SaveCommand}"
                                CommandParameter="{Binding .}" />

                        <!-- DELETE -->
                        <Button Grid.Column="3"
                                Text="Delete"
                                FontAttributes="Bold"
                                BackgroundColor="Maroon"
                                TextColor="White"
                                WidthRequest="90"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                  Path=BindingContext.DeleteCommand}"
                                CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- ADD NEW TASK -->
        <Frame Grid.Row="3"
               Padding="10"
               CornerRadius="16"
               BackgroundColor="White"
               HasShadow="True"
               Margin="0,10,0,0">

            <Grid ColumnDefinitions="*,Auto"
                  ColumnSpacing="10">

                <Entry Grid.Column="0"
                       Placeholder="Enter new task..."
                       Text="{Binding NewTaskTitle}"
                       HeightRequest="48"
                       BackgroundColor="#F3F4F6"
                       TextColor="Black" />

                <Button Grid.Column="1"
                        Text="Add"
                        FontAttributes="Bold"
                        BackgroundColor="DarkBlue"
                        TextColor="White"
                        CornerRadius="12"
                        Command="{Binding AddCommand}" />
            </Grid>
        </Frame>

    </Grid>
</ContentPage>
